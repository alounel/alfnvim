{
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentSize": 4,
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "semicolons": "asNeeded",
            "arrowParentheses": "asNeeded",
            "indentStyle": "space",
            "indentSize": 4,
            "lineWidth": 120
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        },
        "formatter": {
            "indentStyle": "space",
            "indentSize": 4,
            "lineWidth": 120
        }
    }
}
