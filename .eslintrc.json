{
    "$schema": "https://json.schemastore.org/eslintrc.json",
    "root": true,
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "commonjs": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "curly": "error",
        "eqeqeq": "error",
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "no-console": "warn",
        "no-unused-vars": "warn",
        "prefer-const": "error",
        "quotes": ["error", "double"],
        "semi": "warn"
    }
}
